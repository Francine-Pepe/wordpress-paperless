{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "1183px",
      "wideSize": "1183px"
    },
    "color": {
      "palette": [
        {
          "slug": "paperless-black",
          "color": "#131313",
          "name": "Black"
        },
        {
          "slug": "paperless-gray",
          "color": "#8b8b8b",
          "name": "Gray"
        },
        {
          "slug": "paperless-white",
          "color": "#f7f7f7",
          "name": "White"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Inter', sans-serif",
          "slug": "inter",
          "name": "Body - Inter",
          "fontFace": [
            {
              "fontFamily": "'Inter', sans-serif",
              "fontWeight": "300",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/static/Inter-Light.ttf"]
            },
            {
              "fontFamily": "'Inter', sans-serif",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/static/Inter-Regular.ttf"]
            }
          ]
        },
        {
          "fontFamily": "poppins, sans-serif",
          "slug": "poppins",
          "name": "Headings - Poppins"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.64rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "0.8rem",
          "name": "Medium"
        },
        {
          "slug": "regular",
          "size": "1rem",
          "name": "Regular"
        }
      ]
    },
    "custom": {
      "typography": {
        "fontSize": {
          "heading-1": "clamp(2.113rem, 1.9252rem + 0.93vw, 3.052rem)",
          "heading-2": "clamp(1.699rem, 1.5506rem + 0.7419vw, 2.441rem)",
          "heading-3": "clamp(1.35rem, 1.2294rem + 0.603vw, 1.953rem)",
          "heading-4": "clamp(1.253rem, 1.19099rem + 0.310vw, 1.563rem)",
          "heading-5": "clamp(1.063rem, 1.02559rem + 0.1870vw, 1.25rem)",
          "heading-6": "clamp(1.063rem, 1.02559rem + 0.1870vw, 1.25rem)"
        }
      },
      "lineHeight": {
        "tiny": 1.15,
        "small": 1.3,
        "medium": 1.4,
        "normal": 1.6
      }
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--paperless-black)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.75",
      "fontSize": "1rem"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-1)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-2)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-3)"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-4)"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-5)"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-6)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--paperless-black)"
        }
      }
    },
    "blocks": {
      "core/query": {
        "color": {
            "text": "#020202"
        }
      },
      "core/button": {
        "border": {
          "color": "currentColor",
          "radius": "0"         
        },
        
        "color": {
          "background": "var(--wp--preset--color--paperless-black)",
          "text": "var(--wp--preset--color--paperless-white)"
        },
        "spacing": {
          "padding": {
            "top": "0.7rem",
            "right": "1.6rem",
            "bottom": "0.7rem",
            "left": "1.6rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--regular)",
          "lineHeight": "var(--wp--custom--line-height--normal)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header",
      "title": "Header"
    },
    {
      "name": "footer",
      "area": "footer",
      "title": "Footer"
    }
  ]
}
